{
  "name": "zolatailwind",
  "version": "0.0.1",
  "description": "Example Repo of using Zola and Tailwind",
  "scripts": {
    "dev:css": "tailwindcss -i styles/style.css -o static/styles/style.css --watch",
    "prod:css": "tailwindcss -i styles/style.css -o static/styles/style.css --minify",
    "deploy": "npm run prod:css && zola build && gh-pages -d public"
  },
  "author": "Jeremy Castagno",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JeremyBYU/ZolaTailwind.git"
  },
  "bugs": {
    "url": "https://github.com/JeremyBYU/ZolaTailwind/issues"
  },
  "homepage": "https://github.com/JeremyBYU/ZolaTailwind#readme",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.8",
    "tailwindcss": "^3.2.1"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "flowbite": "^1.5.5",
    "gh-pages": "^4.0.0"
  }
}
